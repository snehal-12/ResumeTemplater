@page
@model AboutMeModel
@{
    ViewData["Title"] = "About Me";
}
<div class="jumbotron jumbotron-fluid jumbotron-container about-jumbotron text-white">
    <div class="container-fluid jumbotron-content">
        <p class="text-center jumbotron-header mb-4">About Me</p>
    </div>
</div>

<div class="container">
<p class="w-50 mx-auto text-center">
    @Model.Description
</p>
<hr width="50%">
<p class="w-50 mx-auto text-center">
    If you'd like to contact me, feel free to reach me at: <a href="mailto:@Model.Email">@Model.Email</a>
</p>
</div>